#!/usr/bin/env bash

cd "$(dirname "$0")"
cd ..

if [ -f "../node_modules/.bin/ts-node-dev" ]; then
  EXECUTABLE="../node_modules/.bin/ts-node-dev"
else
  EXECUTABLE="ts-node-dev"
fi

export NEXT_TELEMETRY_DISABLED=true
export NEXT_DEVELOPMENT_MODE=true

"$EXECUTABLE" \
  --transpile-only \
  --ignore-watch=web \
  --ignore-watch='../web' \
  --no-deps \
  --notify=false \
  src/server.ts
