#!/usr/bin/env bash

N=$(($(getconf _NPROCESSORS_ONLN))) || 8

if [ $1 ]; then
  echo "dropping database grouparoo_test_$1"
  if [ -n "$CI" ]; then
    `PGPASSWORD=postgres dropdb "grouparoo_test_$1" --host postgres --user postgres`
  else
    `dropdb "grouparoo_test_$1"`
  fi
else
  for ((i=1; i<=$N; i++)) {
    echo "dropping database grouparoo_test_$i"
    if [ -n "$CI" ]; then
      `PGPASSWORD=postgres dropdb "grouparoo_test_$i" --host postgres --user postgres`
    else
      `dropdb "grouparoo_test_$i"`
    fi
  }
fi
