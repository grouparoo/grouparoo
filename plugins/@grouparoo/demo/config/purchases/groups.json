[
  {
    "id": "all_emails",
    "name": "All Emails",
    "class": "Group",
    "type": "calculated",
    "rules": [
      {
        "profilePropertyRuleId": "email",
        "operation": { "op": "exists" }
      }
    ]
  },
  {
    "id": "spanish_speakers",
    "name": "Spanish Speakers",
    "class": "Group",
    "type": "calculated",
    "rules": [
      {
        "profilePropertyRuleId": "language",
        "operation": { "op": "eq" },
        "match": "Spanish"
      }
    ]
  },
  {
    "id": "high_value",
    "name": "High Value",
    "class": "Group",
    "type": "calculated",
    "rules": [
      {
        "profilePropertyRuleId": "ltv",
        "operation": { "op": "gt" },
        "match": "100"
      }
    ]
  },
  {
    "id": "high_value_automotive",
    "name": "High Value with Recent Automotive Purchase",
    "class": "Group",
    "type": "calculated",
    "rules": [
      {
        "profilePropertyRuleId": "ltv",
        "operation": { "op": "gt" },
        "match": "100"
      },
      {
        "profilePropertyRuleId": "last_purchase_date",
        "operation": { "op": "relative_gt" },
        "relativeMatchNumber": "60",
        "relativeMatchUnit": "days"
      },
      {
        "profilePropertyRuleId": "last_purchase_category",
        "operation": { "op": "eq" },
        "match": "Automotive"
      }
    ]
  }
]
