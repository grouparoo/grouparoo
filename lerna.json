{
  "packages": [
    "cli",
    "apps/*",
    "core",
    "ui/*",
    "clients/@grouparoo/*",
    "plugins/@grouparoo/*"
  ],
  "version": "0.3.0",
  "command": {
    "bootstrap": {
      "ignore": "@grouparoo/app-local*"
    },
    "version": {
      "allowBranch": [
        "main",
        "stable"
      ],
      "message": "chore(release): publish %s [ci skip]"
    }
  }
}
