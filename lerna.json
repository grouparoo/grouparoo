{
  "packages": [
    "monorepo",
    "cli",
    "apps/*",
    "core",
    "ui/*",
    "plugins/@grouparoo/*"
  ],
  "version": "0.9.0",
  "command": {
    "bootstrap": {
      "ignore": "@grouparoo/app-local*"
    },
    "version": {
      "allowBranch": [
        "main"
      ],
      "message": "chore(release): publish %s [ci skip]"
    }
  }
}
