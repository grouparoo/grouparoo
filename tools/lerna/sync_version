#!/usr/bin/env node
const argv = require("yargs")
  .help("h")
  .alias("h", "help")
  .example("$0", "make sure everything is using current lerna.json version")
  .count("verbose")
  .alias("verbose", "v")
  .describe("verbose", "show steps")
  .usage("Usage: $0").argv;

require("./src/sync_version")
  .cmd(argv)
  .then(
    () => {
      process.exit(0);
    },
    (error) => {
      console.error(`ERROR! ${error}`);
      process.exit(1);
    }
  );
