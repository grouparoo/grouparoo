  {{{job_name}}}:
    docker:
      - image: circleci/node:12
        auth:
          username: $DOCKERHUB_USERNAME
          password: $DOCKERHUB_PASSWORD
{{{custom_docker}}}
    steps:
      - checkout
      - restore_cache:
          <<: *node-module-cache-options
      - restore_cache:
          <<: *dist-cache-options
      - restore_cache:
          <<: *core-cache-options
{{{custom_steps}}}
      - run:
          name: install pnpm
          command: sudo npm install -g pnpm
      - run:
          name: test
          command: cd cli && pnpm test
{{custom_test}}
